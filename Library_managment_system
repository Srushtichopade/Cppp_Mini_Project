{
cout<<"\nNo fine";
}
else if(days>=6&&days<=10)
{
fine=2*days;
cout<<"\nYou have to pay "<<fine;
}
else if(days>20)
{
fine =5*days;
cout<<"\nYou have to pay "<<fine;
}
cout<<"\n\nTHE BOOKS ARE RETURNED";
